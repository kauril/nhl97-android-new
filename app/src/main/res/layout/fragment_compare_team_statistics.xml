<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iosdev.nhl97.CompareTeamStatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/mainLinearLayout">

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:layout_marginLeft="85dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/name1TV"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:textSize="20sp"/>
            <NumberPicker
                android:id="@+id/np1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team1TV"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                android:id="@+id/stats"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/wins"
                android:text="@string/wins"
                android:paddingBottom="3dp"
                android:paddingTop="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team1Wins"/>
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team2Wins"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/gf"
                android:text="@string/gf"
                android:paddingBottom="3dp"
                android:paddingTop="3dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team1gf"/>
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team2gf"/>
            </LinearLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/sf"
            android:text="@string/sf"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team1sf"/>
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team2sf"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/gp"
                android:text="@string/gp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team1gp"/>
                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/team2gp"/>
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/sp"
                    android:text="@string/sp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1sp"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/goalsPerGame"
                    android:text="@string/goals_per_game"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1gpg"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2gpg"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/shotsPerGame"
                    android:text="@string/shots_per_game"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1spg"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2spg"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/otWins"
                    android:text="@string/ot_wins"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1otw"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2otw"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/soWins"
                    android:text="@string/so_wins"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1sow"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2sow"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/homeWins"
                    android:text="@string/home_wins"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1hw"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2hw"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/guestWins"
                    android:text="@string/guest_wins"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1gw"/>
                    <TextView
                        android:layout_width="50dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2gw"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"

                android:id="@+id/name2TV"
                android:textSize="20sp"
                android:paddingBottom="25dp"
                android:paddingTop="25dp" />
            <NumberPicker
                android:id="@+id/np2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team2TV"
                android:textSize="20sp"
                android:textAlignment="center"
                android:paddingTop="15dp" />
        </LinearLayout>

        </LinearLayout>


</FrameLayout>
